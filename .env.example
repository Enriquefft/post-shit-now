# ============================================================
# Post Shit Now — Environment Variables
# ============================================================
# Copy this file to .env and fill in your values.
# Only configure the services you plan to use — disabled
# platforms and providers cost nothing.
# ============================================================

# --- Core Infrastructure (required) --------------------------

# Neon Postgres connection string
DATABASE_URL=postgresql://user:password@ep-xxx.us-east-2.aws.neon.tech/dbname?sslmode=require

# Encryption key for storing OAuth tokens in the database
# Generate with: openssl rand -hex 32
HUB_ENCRYPTION_KEY=

# Neon management API key (for hub provisioning)
# Get from: https://console.neon.tech/app/settings/api-keys
NEON_API_KEY=

# --- Trigger.dev (required for scheduling) -------------------

# Get from: https://cloud.trigger.dev → project settings
TRIGGER_SECRET_KEY=
TRIGGER_PROJECT_REF=

# --- Platform OAuth (configure per platform) -----------------

# X (Twitter) — https://developer.x.com/
X_CLIENT_ID=
X_CLIENT_SECRET=
# Optional: direct access token for voice content import
X_ACCESS_TOKEN=

# LinkedIn — https://developer.linkedin.com/
LINKEDIN_CLIENT_ID=
LINKEDIN_CLIENT_SECRET=

# Instagram — https://developers.facebook.com/
INSTAGRAM_APP_ID=
INSTAGRAM_APP_SECRET=

# TikTok — https://developers.tiktok.com/
TIKTOK_CLIENT_KEY=
TIKTOK_CLIENT_SECRET=

# --- Notifications (pick one or both) ------------------------

# WAHA (self-hosted WhatsApp) — https://waha.devlike.pro/
WAHA_BASE_URL=
WAHA_API_KEY=
WAHA_SESSION=default

# Twilio (WhatsApp Cloud) — https://www.twilio.com/
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_FROM_NUMBER=

# --- Media Generation (configure what you need) --------------

# OpenAI — GPT Image generation
# https://platform.openai.com/api-keys
OPENAI_API_KEY=

# Fal.ai — powers Ideogram, Flux, Kling, Pika
# https://fal.ai/dashboard/keys
FAL_KEY=

# Ideogram — direct API (fallback if not using Fal)
# https://ideogram.ai/manage-api
IDEOGRAM_API_KEY=

# Runway ML — video generation
# https://app.runwayml.com/
RUNWAYML_API_SECRET=

# --- Intelligence & Search (all optional) --------------------

# Brave Search — https://brave.com/search/api/
BRAVE_API_KEY=

# Tavily — https://tavily.com/
TAVILY_API_KEY=

# Exa — https://exa.ai/
EXA_API_KEY=

# Perplexity — https://perplexity.ai/
PERPLEXITY_API_KEY=

# Product Hunt — https://www.producthunt.com/v2/oauth/applications
PRODUCTHUNT_TOKEN=

# Reddit — https://www.reddit.com/prefs/apps
REDDIT_CLIENT_ID=
REDDIT_CLIENT_SECRET=
